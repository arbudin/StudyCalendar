<Window x:Class="StudyCalendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyCalendar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <!-- Верхняя панель с заголовком и кнопками -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Name="PrevMonthButton" Content="←" Width="30" />
                <TextBlock Name="MonthLabel" FontSize="16" FontWeight="Bold" Text="Март 2025" Margin="10,0" />
                <Button Name="NextMonthButton" Content="→" Width="30" />
            </StackPanel>

            <Grid Name="CalendarGrid"> 
                <!-- отображаем дни -->
                

            </Grid>
        </StackPanel>
    </Grid>
</Window>